{
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.generator": "Unix Makefiles",
    "cmake.configureOnOpen": true,
    "cmake.buildBeforeRun": true,
    "cmake.clearOutputBeforeBuild": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.compilerPath": "/usr/bin/g++",
    "files.associations": {
        "*.h": "cpp",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.tpp": "cpp",
        "CMakeLists.txt": "cmake",
        "*.cmake": "cmake"
    },
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "clang-format.style": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 100, AllowShortFunctionsOnASingleLine: None}",
    "cmake.debugConfig": {
        "name": "Debug FingerprintEnhancer",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/bin/FingerprintEnhancer",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    },
    "search.exclude": {
        "**/build": true,
        "**/build-*": true,
        "**/.git": true,
        "**/node_modules": true
    },
    "files.exclude": {
        "**/build": true,
        "**/build-*": true,
        "**/.git": true
    },
    "terminal.integrated.cwd": "${workspaceFolder}",
    "qt.searchPath": "/usr/lib/qt6",
    "qt.qmakePath": "/usr/bin/qmake6",
    "claudeCodeChat.permissions.yoloMode": true,
    "CodeGPT.apiKey": "Github"
}